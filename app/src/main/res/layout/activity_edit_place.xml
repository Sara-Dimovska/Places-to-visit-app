<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".EditPlaceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit place"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>


        <TextView
            android:id="@+id/place_imageURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="Enter image url:"
            android:layout_below="@id/label"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/enter_imgURL"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/place_imageURL"/>


        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of the place:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/enter_imgURL"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/enter_name"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/place_name"/>

        <TextView
            android:id="@+id/place_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/enter_name"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/enter_desc"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/place_desc"/>


        <RadioGroup
            android:id="@+id/radios"
            android:layout_below="@id/enter_desc"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radioRestaurant">

            <RadioButton
                android:id="@+id/radioRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/enter_desc"
                android:text="restaurant" />

            <RadioButton
                android:id="@+id/radioBar"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/enter_desc"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/radioRestaurant"
                android:text="bar" />

            <RadioButton
                android:id="@+id/radioNightclub"
                android:layout_width="157dp"
                android:layout_height="36dp"
                android:layout_below="@id/enter_desc"
                android:layout_alignRight="@id/radioBar"
                android:layout_marginTop="5dp"
                android:layout_marginRight="-158dp"
                android:layout_marginBottom="5dp"
                android:text="nightclub" />

        </RadioGroup>

        <TextView
            android:id="@+id/place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/radios"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/enter_address"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"

            android:layout_below="@id/place_address"/>


        <TextView
            android:id="@+id/place_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telephone:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/enter_address"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/enter_telephone"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/place_telephone"/>


        <TextView
            android:id="@+id/place_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/enter_telephone"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/enter_email"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/place_email"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_email"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="120dp"
            android:text="Submit" />

    </RelativeLayout>

</ScrollView>